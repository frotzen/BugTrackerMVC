@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}
<!-- Error -->
<div class="container-xxl container-p-y">
    <div class="misc-wrapper">
        <h2 class="mb-2 mx-2">You are not authorized!</h2>
        <p class="mb-4 mx-2">You are not authorized to view this page with the credentials provided. 
            <br /> Please contact your administrator.</p>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to home</a>
        <div class="mt-3">
            <img src="/assets/img/illustrations/man-locked-outside.png"
                 alt="page-misc-error-light"
                 width="500"
                 class="img-fluid"
                 data-app-dark-img="illustrations/page-misc-error-dark.png"
                 data-app-light-img="illustrations/page-misc-error-light.png" />
        </div>
    </div>
</div>
