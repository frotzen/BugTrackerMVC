@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted">Account</span><span> / @ViewBag.Title</span></h4>
    <div class="row">
        <div class="col-sm-12 col-md-10 col-xl-8">
            <div class="card mb-4">
                <div class="card-body">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-4">
                            <input asp-for="Username" class="form-control" disabled />
                            <label asp-for="Username" class="form-label-lg"></label>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <label asp-for="Input.PhoneNumber" class="form-label-lg"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <button id="update-profile-button" type="submit" class="w-100 mt-4 btn btn-lg btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
