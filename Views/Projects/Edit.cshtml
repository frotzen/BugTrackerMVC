@using Microsoft.AspNetCore.Identity
@using BugTrackerMVC.Services.Interfaces

@model BugTrackerMVC.Models.ViewModels.AssignPMViewModel
@inject IBTFileService FileService


@{
    ViewData["Title"] = "Edit";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3"><span class="text-muted">@ViewContext.RouteData.Values["controller"]!.ToString()</span> / @ViewBag.Title</h4>
    <div class="row">
        <div class="col-auto">
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Edit" id="form" asp-controller="Projects" onsubmit="handleSubmit()">
                        <div asp-validation-summary="ModelOnly" class="text-danger" enctype="multipart/form-data"></div>
                        <input type="hidden" asp-for="Project!.Id" />            
                        <input type="hidden" asp-for="Project!.CompanyId"/>
                        <input type="hidden" asp-for="Project!.Created"/>
                        <input type="hidden" asp-for="Project!.Description" id="textBox" />

                        <div class="form-group mb-3">
                            <label asp-for="Project!.Name" class="control-label">Project Name</label>
                            <input asp-for="Project!.Name" class="form-control" />
                            <span asp-validation-for="Project!.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 rounded bg-white" id="editor">
                            @Html.Raw(Model.Project!.Description)
                            <span asp-validation-for="Project!.Description" class="text-danger"></span>
                        </div>
                        @*
                        <div class="form-group">
                            <label asp-for="Project!.Created" class="control-label"></label>
                            <input asp-for="Project!.Created" class="form-control" />
                            <span asp-validation-for="Project!.Created" class="text-danger"></span>
                        </div>*@
                        <div class="form-group mb-3">
                            <label asp-for="Project!.StartDate" class="control-label">Start Date</label>
                            <input asp-for="Project!.StartDate" class="form-control" />
                            <span asp-validation-for="Project!.StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Project!.EndDate" class="control-label">End Date</label>
                            <input asp-for="Project!.EndDate" class="form-control" />
                            <span asp-validation-for="Project!.EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Project!.ProjectPriorityId" class="control-label">Priority</label>
                            <select asp-for="Project!.ProjectPriorityId" class="form-control" asp-items="ViewBag.ProjectPriorityId"></select>
                            <span asp-validation-for="Project!.ProjectPriorityId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label">Project Manager</label>
                            <select asp-for="@Model.PMId" class="form-control" asp-items="@Model.PMList"></select>
                            <span asp-validation-for="PMId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Project!.ImageFormFile" class="control-label">Project Image</label>
                            <img id="projectImaqe" class="img-fluid border roundecol-md-3 m-2" style="max-height: 250px;" src="" />
                            <input asp-for="Project!.ImageFormFile" type="file" class="from-control mt-3 pt-2" accept=".png,.jpg,.jpeg,.gif"
                                    onchange="document.getElementById('projectImage').src=windowURL.createObjectURL(this.files[0])" />
                        </div>
                        @*<div class="form-group">
                            <label asp-for="Project!.ImageFileData" class="control-label"></label>
                            <input asp-for="Project!.ImageFileData" class="form-control" />
                            <span asp-validation-for="Project!.ImageFileData" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Project!.ImageFileType" class="control-label"></label>
                            <input asp-for="Project!.ImageFileType" class="form-control" />
                            <span asp-validation-for="Project!.ImageFileType" class="text-danger"></span>
                        </div>*@
                        <div class="form-group form-check mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Project!.Archived" /> @Html.DisplayNameFor(model => model.Project!.Archived)
                            </label>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let quill = new Quill('#editor', {
            theme: 'snow'
        });
        function handleSubmit() {
            console.info('handleSubmit() called');
            document.getElementById('textBox').value = quill.root.innerHTML;
        };
    </script>
}