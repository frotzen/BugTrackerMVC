@using Microsoft.AspNetCore.Identity
@using BugTrackerMVC.Services.Interfaces
@using BugTrackerMVC.Enums

@model BugTrackerMVC.Models.ViewModels.AssignPMViewModel
@inject IBTFileService FileService

@{
    ViewData["Title"] = "Edit";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3"><span class="text-muted">@ViewContext.RouteData.Values["controller"]!.ToString()</span> / @ViewBag.Title</h4>
    <div class="row">
        <div class="col-sm-12 col-md-10 col-xl-8">
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Edit" id="form" asp-controller="Projects" method="post" enctype="multipart/form-data" onsubmit="handleSubmit()">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Project!.Id" />            
                        <input type="hidden" asp-for="Project!.CompanyId"/>
                        <input type="hidden" asp-for="Project!.Created"/>
                        <input type="hidden" asp-for="Project!.Description" id="textBox" />

                        <div class="form-group mb-3">
                            <label asp-for="Project!.Name" class="control-label">Project Name</label>
                            <input asp-for="Project!.Name" class="form-control" />
                            <span asp-validation-for="Project!.Name" class="text-danger"></span>
                        </div>
                        <label class="control-label">Description</label>
                        <div class="form-group mb-3 rounded bg-white" id="editor">
                            @Html.Raw(Model.Project!.Description)
                            <span asp-validation-for="Project!.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Project!.StartDate" class="control-label">Start Date</label>
                            <input asp-for="Project!.StartDate" type="date" class="form-control" />
                            <span asp-validation-for="Project!.StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Project!.EndDate" class="control-label">End Date</label>
                            <input asp-for="Project!.EndDate" type="date" class="form-control" />
                            <span asp-validation-for="Project!.EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Project!.ProjectPriorityId" class="control-label">Priority</label>
                            <select asp-for="Project!.ProjectPriorityId" class="form-control" asp-items="ViewBag.ProjectPriorityId"></select>
                            <span asp-validation-for="Project!.ProjectPriorityId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="formFile" class="form-label"></label><label class="control-label">Project Image</label>
                            <br/>
                            <input asp-for="Project!.ImageFormFile" class="form-control" type="file" accept=".png,.jpg,.jpeg,.gif" onchange="document.getElementById('imageFileData').src = window.URL.createObjectURL(this.files[0])" />
                            <span asp-validation-for="Project!.ImageFormFile" class="text-danger"></span>
                            @if (Model.Project.ImageFileData != null)
                            {
                                <img id="imageFileData" class="img-fluid img-thumbnail mt-3" style="max-width:100px" src="data:image/*;base64,@(Convert.ToBase64String(Model.Project.ImageFileData))" />
                            }
                            else
                            {
                                <img id="imageFileData" class="img-fluid img-thumbnail mt-3" style="max-width:100px" src="/img/defaultProjectImage.png" />
                            }
                        </div>

                        @if(User.IsInRole(nameof(BTRoles.Admin)))
                        {
                            <div class="form-group mb-3">
                                <label class="control-label">Project Manager</label>
                                <select asp-for="@Model.PMId" class="form-control" asp-items="@Model.PMList">
                                    <option value="">Unassigned</option>
                                </select>
                                <span asp-validation-for="PMId" class="text-danger"></span>
                            </div>
                        }
   
                            <div class="form-group form-check mb-3">
                                <label class="form-check-label">
                                <input class="form-check-input" asp-for="Project!.Archived" /> @Html.DisplayNameFor(model => model.Project!.Archived)
                                </label>
                            </div>

                        <div class="form-group mb-3">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let quill = new Quill('#editor', {
            theme: 'snow'
        });
        function handleSubmit() {
            console.info('handleSubmit() called');
            document.getElementById('textBox').value = quill.root.innerHTML;
        };
    </script>
}