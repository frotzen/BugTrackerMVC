@model BugTrackerMVC.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted">@ViewContext.RouteData.Values["controller"]!.ToString()</span> / @ViewBag.Title</h4>
    <div class="row">
        <div class="col-sm-12 col-md-10 col-xl-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div>
                        <h6 class="main-content-label mb-1">Company Invite</h6>
                        <p class="text-muted card-sub-title">Invite a new user to join your Bug Tracker company.</p>
                    </div>
                    <form asp-action="Create">
                        <div class="form-group mb-3">
                            <label asp-for="InviteeEmail" class="control-label">Email</label>
                            <input asp-for="Project!.Name" class="form-control" placeholder="Enter new user's email" />
                            <span asp-validation-for="InviteeEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="InviteeFirstName" class="control-label">First Name</label>
                            <input asp-for="InviteeFirstName" class="form-control" placeholder="Enter new user's first name" />
                            <span asp-validation-for="InviteeFirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="InviteeLastName" class="control-label">Last Name</label>
                            <input asp-for="InviteeLastName" class="form-control" placeholder="Enter new user's last name" />
                            <span asp-validation-for="InviteeLastName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ProjectId" class="control-label">Select Project</label>
                            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId">
                                <option value="">Select Project</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Message" class="control-label">Message</label>
                            <textarea asp-for="Message" class="form-control" multiple="multiple" placeholder="Enter an invitation message">
                            </textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="form-group row justify-content-end mb-0">
                            <div class="col-md-8 pl-md-2">
                                <input type="submit" class="btn ripple btn-primary pd-x-30 me-2" value="Send Invite" />
                                <a asp-controller="Home" asp-action="Dashboard" type="button" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
