@model BugTrackerMVC.Models.Ticket

@{
    ViewData["Title"] = "Archive";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted">@ViewContext.RouteData.Values["controller"]!.ToString()</span> / @ViewBag.Title</h4>
    <div class="row">
        <div class="col-sm-12 col-md-10 col-xl-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div>
                        <h6 class="main-content-label mb-1">Archive Ticket</h6>
                        <p class="text-danger card-sub-title">Are you sure you want to archive this ticket?</p>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Created)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Created)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Updated)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Updated)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Project)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Project.Description)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.TicketPriority)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TicketPriority.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.TicketType)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TicketType.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.TicketStatus)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TicketStatus.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DeveloperUser)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DeveloperUser.FullName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.SubmitterUser)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.SubmitterUser.FullName)
                        </dd>
                    </dl>
                    <div class="form-group row justify-content-end mb-0">
                        <div class="col-md-8 pl-md-2">
                            <form asp-action="Archive" method="post">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Archive" class="btn btn-danger me-2" />
                                <a asp-action="AllTickets" type="button" class="btn btn-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
