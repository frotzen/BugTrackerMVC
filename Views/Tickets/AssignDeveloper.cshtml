@model BugTrackerMVC.Models.ViewModels.AssignDeveloperViewModel

@{
    ViewData["Title"] = "Assign Developer";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted">@ViewContext.RouteData.Values["controller"]!.ToString()</span> / @ViewBag.Title</h4>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <h3>@Model.Ticket.Title</h3>
                <div class="card-header">
                    <label class="control-label">Assign Developer</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                        <input asp-for="Ticket.Id" type="hidden"/>
                        <p>Description: @Model.Ticket.Description</p>
                        <div class="form-group">
                            <label class="col-form-label">Select Developer</label>
                            <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Assigned" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">Details</a> | 
        <a asp-action="UnassignedTickets" asp-controller="Tickets">Unassigned Tickets</a>
    </div>
</div>