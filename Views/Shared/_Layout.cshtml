    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

        <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
          <div class="app-brand demo">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="app-brand-link">
              <span class="app-brand-logo demo">
               <img class="img-fluid"/>
              </span>
              <span class="app-brand-text menu-text fs-3 fw-bolder ms-2">AardvarkMVC</span>
            </a>

            <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
              <i class="bx bx-chevron-left bx-sm align-middle"></i>
            </a>
          </div>

          <div class="menu-inner-shadow"></div>
          <ul class="menu-inner py-1">

            

            <!-- Dashboard -->
            <li class="menu-item @Html.ActiveClass("Home", "Index")">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="menu-link">
                    <i class="menu-icon tf-icons bx bx-home-circle"></i>
                    <div data-i18n="Analytics">Home</div>
                </a>
            </li>

            <!-- Layouts -->
            @if (SignInManager.IsSignedIn(User))
            {
                        <li class="menu-item @Html.ActiveClass("Companies", "ManageUserRoles", "active open")">
                            <a asp-area="" asp-controller="Companies" asp-action="Index" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons bx bx-buildings"></i>
                                <div data-i18n="Companies">Companies</div>
                            </a>

                            <ul class="menu-sub">
                                <li class="menu-item @Html.ActiveClass("Companies", "ManageUserRoles")">
                                    <a asp-area="" asp-controller="Companies" asp-action="ManageUserRoles" class="menu-link">
                                        <div data-i18n="Manage Roles">Manage Roles</div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- Actions -->
                        <li class="menu-header small text-uppercase">
                            <span class="menu-header-text">Actions</span>
                        </li>
                        <!-- Projects -->
                        <li class="menu-item @Html.ActiveClass("Projects", "Create,Index,MyProjects,AllProjects,UnassignedProjects,ArchivedProjects", "active open")">
                            <a href="javascript:void(0);" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons bx bx-folder"></i>
                                <div data-i18n="Projects">Projects</div>
                            </a>
                            <ul class="menu-sub">
                                <li class="menu-item @Html.ActiveClass("Projects", "Create")">
                                    <a asp-area="" asp-controller="Projects" asp-action="Create" class="menu-link">
                                        <div data-i18n="New Project">New Project</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Projects", "Index")">
                                    <a asp-area="" asp-controller="Projects" asp-action="Index" class="menu-link">
                                        <div data-i18n="Index">Index</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Projects", "MyProjects")">
                                    <a asp-area="" asp-controller="Projects" asp-action="MyProjects" class="menu-link">
                                        <div data-i18n="My Projects">My Projects</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Projects", "AllProjects")">
                                    <a asp-area="" asp-controller="Projects" asp-action="AllProjects" class="menu-link">
                                        <div data-i18n="All Projects">All Projects</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Projects", "UnassignedProjects")">
                                    <a asp-area="" asp-controller="Projects" asp-action="UnassignedProjects" class="menu-link">
                                        <div data-i18n="Unassigned Projects">Unassigned Projects</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Projects", "ArchivedProjects")">
                                    <a asp-area="" asp-controller="Projects" asp-action="ArchivedProjects" class="menu-link">
                                        <div data-i18n="Archived Projects">Archived Projects</div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- Tickets -->
                        <li class="menu-item @Html.ActiveClass("Tickets", "Create,Index,MyTickets,AllTickets,UnassignedTickets,ArchivedTickets", "active open")">
                            <a href="javascript:void(0);" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons bx bx-notepad"></i>
                                <div data-i18n="Tickets">Tickets</div>
                            </a>
                            <ul class="menu-sub">
                                <li class="menu-item @Html.ActiveClass("Tickets", "Create")">
                                    <a asp-area="" asp-controller="Tickets" asp-action="Create" class="menu-link">
                                        <div data-i18n="New Ticket">New Ticket</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Tickets", "Index")">
                                    <a asp-area="" asp-controller="Tickets" asp-action="Index" class="menu-link">
                                        <div data-i18n="Index">Index</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Tickets", "MyTickets")">
                                    <a asp-area="" asp-controller="Tickets" asp-action="MyTickets" class="menu-link">
                                        <div data-i18n="My Tickets">My Tickets</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Tickets", "AllTickets")">
                                    <a asp-area="" asp-controller="Tickets" asp-action="AllTickets" class="menu-link">
                                        <div data-i18n="All Tickets">All Tickets</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Tickets", "UnassignedTickets")">
                                    <a asp-area="" asp-controller="Tickets" asp-action="UnassignedTickets" class="menu-link">
                                        <div data-i18n="Unnassigned Tickets">Unnassigned Tickets</div>
                                    </a>
                                </li>
                                <li class="menu-item @Html.ActiveClass("Tickets", "ArchivedTickets")">
                                    <a asp-area="" asp-controller="Tickets" asp-action="ArchivedTickets" class="menu-link">
                                        <div data-i18n="Archived Tickets">Archived Tickets</div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- Information -->
                        <li class="menu-header small text-uppercase"><span class="menu-header-text">Information</span></li>
                        <!-- Notifications -->
                        <li class="menu-item @Html.ActiveClass("Notifications", "Index")">
                            <a asp-area="" asp-controller="Notifications" asp-action="Index" class="menu-link">
                <i class="menu-icon tf-icons bx bx-notification"></i>
                <div data-i18n="Basic">Notifications</div>
              </a>
            </li>
